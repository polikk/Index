        include partials/header
        main.media.bg-right
            section.container.section.media__archive
                h6.section-title.section-title-black.center Фотогалерея
                .media__archive__content
                    .media__archive__content__years
                        each val, index in ['2020 - 2010', '2010 - 2000', '2000 - 1990', '1990 - 1980', '1980 - 1970', '1970 - 1960']
                            span(class=index ? 'media__archive__content__years__item' : 'media__archive__content__years__item media__archive__content__years__item-active')=val
                    .media__archive__content__photos
                        .media__archive__content__photos__slider
                            each val in [1, 2, 3]
                                .media__archive__content__photos__slider__item
                                    img(src="https://static.ukrinform.com/photos/2019_07/thumb_files/630_360_1562593246-984.jpg")
                                    img(src="https://hungary.mfa.gov.ua/storage/app/uploads/public/5df/2df/d89/5df2dfd892a33806183584.jpg")
                                    img(src="https://i.ytimg.com/vi/mRaxb4HLhsw/maxresdefault.jpg")
                                    img(src="https://novyny.org/wp-content/uploads/2019/07/cropped-SCL-243klein.jpg")
                                    img(src="https://www.ufest.in.ua/images/common/1/0/3/6/4/1/5c367e396e1ab.jpg")
                                    img(src="https://womo.ua/wp-content/uploads/2016/03/12039748_994876960560825_2052831705818175456_n.jpg")
                                    img(src="https://hungary.mfa.gov.ua/storage/app/uploads/public/5df/2df/d89/5df2dfd892a33806183584.jpg")
                                    img(src="https://m.day.kyiv.ua/sites/default/files/main/articles/09082019/24hor2.jpg")
                                    img(src="https://static.ukrinform.com/photos/2019_07/thumb_files/630_360_1562593246-984.jpg")
                                    img(src="https://hungary.mfa.gov.ua/storage/app/uploads/public/5df/2df/d89/5df2dfd892a33806183584.jpg")
                                    img(src="https://i.ytimg.com/vi/mRaxb4HLhsw/maxresdefault.jpg")
                                    img(src="https://static.ukrinform.com/photos/2019_07/thumb_files/630_360_1562593246-984.jpg")
                        .media__archive__content__photos__navigation


            section.section.media__video
                h6.section-title.section-title-black.center Відеогалерея
                .media__video__content.container
                    iframe.media__video__content__player(frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture")
                    .media__video__content__list
                        //- .media__video__content__list__control.media__video__content__list__control-prev ^
